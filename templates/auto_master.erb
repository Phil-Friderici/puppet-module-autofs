<% if @use_dash_hosts_for_net_bool -%>
/net -hosts
<% else -%>
/net /etc/auto.net --timeout=60
<% end -%>
<% if @maps_real.any? -%>

<%   @maps_real.keys.sort.each do |key| -%>
<%     @maps_real[key]['mapname'] ? @mapname = @maps_real[key]['mapname'] : @mapname = key -%>
<%     @maps_real[key]['mappath'] ? @mappath = @maps_real[key]['mappath'] : @mappath = "/etc/auto.#{key}" -%>
<%     if @maps_real[key]['mountpoint'] -%>
<%       @maps_real[key]['mountpoint'].chars.first == '/' ? @mountpoint = @maps_real[key]['mountpoint'] : @mountpoint = "/#{@maps_real[key]['mountpoint']}" -%>
<%       if @maps_real[key]['maptype'] -%>
<%= @mountpoint %><% if @osfamily != 'Solaris' %> <%= @maps_real[key]['maptype'] %><% end %> <%= @mapname -%>
<%       elsif @maps_real[key]['manage'] == false -%>
<%= @mountpoint %> -null<% # remove linebreak -%>
<%       else -%>
<%= @mountpoint %> <%= @mappath -%>
<%       end -%>
<%     else -%>
/<%= key %> <%= @mappath -%>
<%     end -%>
<%     if @maps_real[key]['options'] -%>
 <%= @maps_real[key]['options'] -%>
<%     end %>
<%   end -%>
<% end -%>
<% if @use_nis_maps_bool -%>

+<%= @nis_master_name %>
<% end -%>
